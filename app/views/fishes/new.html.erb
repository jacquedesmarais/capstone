<h1>New Fish</h1>

<%= form_tag '/fishes', method: :post do %>
  <form>
  <div class="form-group">
    <label for="name">Name: </label>
    <input type="text" name="name" value="<%= @fish.name %>">
  </div>
  <div class="form-group">
    <label for="family">Family: </label>
    <input type="text" name="family" value="<%= @fish.family %>">
  </div>
  <div class="form-group">
    <label for="color">Color: </label>
    <input type="text" name="color" value="<%= @fish.color %>">
  </div>
  <div>
    <label for="description">Description: </label>
    <input type="text" name="description" value="<%= @fish.description %>">   
  </div>
  
  <br>
  <br>
    <button class="btn btn-success" type="submit" class="btn btn-default">Add Fish</button>
  </form>
<% end %>