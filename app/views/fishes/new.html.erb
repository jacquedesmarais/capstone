<h1>New Fish</h1>

<%= form_for(@fish, url: '/fishes') do |f| %>
  <div class="form-group">
    <label for="name">Name: </label>
    <%= f.text_field :name, value: @fish.name %>
  </div>
  <div class="form-group">
    <label for="family">Family: </label>
    <%= f.text_field :family, value: @fish.family %>
  </div>
  <div class="form-group">
    <label for="color">Color: </label>
    <%= f.text_field :color, value: @fish.color %>
  </div>
  <div>
    <label for="description">Description: </label>
    <%= f.text_field :description, value: @fish.description %>
  </div><br>
  <div>
    Aquarium:
    <%= f.collection_select(:aquarium_id, @aquariums, :id, :name) %>
  </div><br>
  <center><div class="form-group">
    <%= f.file_field :images, multiple: true %>
  </div></center>
  <%= f.submit "Add Fish", class: 'btn btn-success' %>
<% end %>