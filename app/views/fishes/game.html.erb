<h1>Match the Fish With Their Name</h1>
<br>
<div class="container">
  <% @fishes.each_slice(3) do |fish_slice| %>
    <div class="row">
      <% fish_slice.each do |fish| %>
        <div class="col-md-4 col-sm-6 product-index-single">
          <div id="game" class="well">
            <h2><img src="<%= fish.default_image %>"></h2>
            <select name="name">
              Fish Name:
              <% @fishes.each do |fish| %>
                <option value="<%= fish.name %>"><%= fish.name %></option>
              <% end %>
            </select>
            <button class="btn btn-success" type="submit" class="btn btn-default">Guess</button>
          </div>
        </div>
    <% end %>
  </div>
<% end %>
</div>